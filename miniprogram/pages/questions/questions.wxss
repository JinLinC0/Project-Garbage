.swiper_head {
  width: 100%;
  height: 270rpx;
  background-color: white;
  margin-top: 12px;
  margin-bottom: 15px;
}

.answeringArea {
  width: 100%;
}

.tittle {
  display: flex;
  justify-content: center;
  font-weight: bold;
  font-size: large;
  padding-top: 5px;
}

.radio-group-container {
  display: flex;
  flex-direction: column;
}

.radio-group-box {
  padding-left: 4px;
  border-radius: 8px;
}

.radio-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
  margin-top: 10px;
}

.radio-button-wrapper {
  display: flex;
  align-items: center;
  width: 49vw;
  border: 1px solid rgb(167, 164, 164);
  padding: 10px;
  border-radius: 4px;
}

.radio-button {
  margin-right: 5px;
}

.blue-button {
  background-color: #243d75;
}

.red-button {
  background-color: #e94e0e;
}

.brown-button {
  background-color: #593d39;
}

.black-button {
  background-color: #302e2f;
}

.textClass {
  color: white;
}